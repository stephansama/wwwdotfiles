---
import { Icon } from "astro-icon/components";
---

<header
	class="sticky top-0 bg-gradient-to-b via-ctp-base/90 z-[999] from-ctp-base to-transparent"
>
	<nav
		class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8"
		aria-label="Global"
	>
		<div class="flex lg:flex-1">
			<a href="/" class="-m-1.5 p-1.5">
				<span class="sr-only">Stephansama</span>
				<img src="/favicon.svg" width="24" height="24" />
			</a>
		</div>
		<div class="flex lg:hidden">
			<button
				type="button"
				class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-indigo-300"
			>
				<span class="sr-only">Open main menu</span>
				<svg
					class="size-6"
					fill="none"
					viewBox="0 0 24 24"
					stroke-width="1.5"
					stroke="currentColor"
					aria-hidden="true"
					data-slot="icon"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
				</svg>
			</button>
		</div>
		<div class="hidden lg:flex lg:gap-x-12">
			<a
				href="/zsh"
				class="text-sm/6 font-semibold flex items-center gap-2 text-ctp-text"
			>
				<Icon name="devicon:ohmyzsh" />
				<span>zsh</span>
			</a>
			<a
				href="/nvim"
				class="text-sm/6 font-semibold flex items-center gap-2 text-ctp-text"
			>
				<Icon name="devicon:neovim" />
				<span>vim</span>
			</a>
			<a
				href="/tmux"
				class="text-sm/6 flex items-center gap-2 font-semibold text-ctp-text"
			>
				<Icon
					name="vscode-icons:file-type-light-tmux"
					class="dark:hidden block"
				/>
				<Icon name="vscode-icons:file-type-tmux" class="hidden dark:block" />
				<span>tmux</span>
			</a>
			<a
				href="/macos"
				class="text-sm/6 flex items-center gap-2 font-semibold text-ctp-text"
			>
				<Icon name="simple-icons:apple" />
				<span>macos</span>
			</a>
			<a href="/misc" class="text-sm/6 font-semibold text-ctp-text">misc</a>
		</div>
		<div class="hidden lg:flex lg:flex-1 lg:justify-end">
			<span></span>
		</div>
	</nav>
