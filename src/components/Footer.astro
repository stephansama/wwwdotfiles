---
import { Icon } from "astro-icon/components";
---

<footer>
	<div
		class="mx-auto max-w-7xl px-6 py-12 md:flex md:items-center md:justify-between lg:px-8"
	>
		<div class="flex justify-center gap-x-6 md:order-2">
			<a href="#" class="text-gray-400 hover:text-white">
				<span class="sr-only">LinkedIn</span>
				<Icon name="simple-icons:linkedin" />
			</a>
			<a href="#" class="text-gray-400 hover:text-white">
				<span class="sr-only">GitHub</span>
				<Icon name="simple-icons:github" />
			</a>
			<a href="#" class="text-gray-400 hover:text-white">
				<span class="sr-only">YouTube</span>
				<Icon name="simple-icons:youtube" />
			</a>
		</div>
		<p class="mt-8 text-center text-sm/6 text-gray-400 md:order-1 md:mt-0">
			&copy; {new Date().getFullYear()}
		</p>
	</div>
</footer>
